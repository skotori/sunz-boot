<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.skotori.sunzboot.module.sys.mapper.SysPowerMapper">

    <select id="selectPowersByRoleIds" resultType="com.skotori.sunzboot.module.sys.model.SysPower">
        select *
        from sys_power as p
        left join sys_role_power as rp on p.id = rp.power_id
        where rp.role_id in
        <foreach item="item" index="index" collection="list" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

    <select id="selectMenuList" parameterType="java.lang.String" resultType="com.skotori.sunzboot.module.sys.model.SysPower">
        select *
        from sys_power as p
        left join sys_role_power as rp on p.id = rp.power_id
        left join sys_role as r on rp.role_id = r.id
        left join sys_user_role as ur on r.id = ur.role_id
        left join sys_user as u on ur.user_id = u.id
        where p.type = 1
        and u.account = #{account}
    </select>
    
    <select id="selectPowerList" parameterType="com.skotori.sunzboot.module.sys.model.SysPower" resultType="com.skotori.sunzboot.module.sys.model.SysPower">
        select *
        from sys_power
        where 1 = 1
        <if test="id != null and id != ''">
            and pids like concat('%', #{id}, '%')
        </if>
        <if test="code != null and code != ''">
            and code like concat('%', #{code}, '%')
        </if>
        <if test="name != null and name != ''">
            and `name` like concat('%', #{name}, '%')
        </if>
        <if test="type != null and type != ''">
            and `type` = #{type}
        </if>
        <if test="status != null and status != ''">
            and status = #{status}
        </if>
    </select>

    <select id="selectNodeList" parameterType="com.skotori.sunzboot.module.sys.model.SysPower" resultType="com.skotori.sunzboot.util.TreeNode">
        select id,
        pid,
        `name` as label
        from sys_power
        where 1 = 1
        <if test="id != null and id != ''">
            and pids like concat('%', #{id}, '%')
        </if>
        <if test="code != null and code != ''">
            and code like concat('%', #{code}, '%')
        </if>
        <if test="name != null and name != ''">
            and `name` like concat('%', #{name}, '%')
        </if>
        <if test="type != null and type != ''">
            and `type` = #{type}
        </if>
        <if test="status != null and status != ''">
            and status = #{status}
        </if>
    </select>

    <insert id="insertPower" parameterType="com.skotori.sunzboot.module.sys.model.SysPower">
        insert into sys_power (
            pid,
            pids,
            code,
            `name`,
            <if test="url != null and url != ''">
                url,
            </if>
            <if test="icon != null and icon != ''">
                icon,
            </if>
            <if test="num != null and num != ''">
                num,
            </if>
            <if test="type != null and type != ''">
                `type`,
            </if>
            <if test="status != null and status != ''">
                status,
            </if>
            <if test="note != null and note != ''">
                note,
            </if>
            create_time,
            create_user
        ) values (
            #{pid},
            #{pids},
            #{code},
            #{name},
            <if test="url != null and url != ''">
                #{url},
            </if>
            <if test="icon != null and icon != ''">
                #{icon}
            </if>
            <if test="num != null and num != ''">
                #{num},
            </if>
            <if test="type != null and type != ''">
                #{type},
            </if>
            <if test="status != null and status != ''">
                #{status},
            </if>
            <if test="note != null and note != ''">
                #{note},
            </if>
            #{create_time},
            #{create_user}
        )
    </insert>

    <delete id="deletePowerById" parameterType="java.lang.Integer">
        delete from sys_power
        where id = #{id}
    </delete>

    <update id="updatePower" parameterType="com.skotori.sunzboot.module.sys.model.SysPower">
        update sys_power set
        <if test="pid != null and pid != ''">
            pid = #{pid},
        </if>
        <if test="pids != null and pids != ''">
            pids = #{pids},
        </if>
        <if test="code != null and code != ''">
            code = #{code},
        </if>
        <if test="name != null and name != ''">
            `name` = #{name},
        </if>
        <if test="url != null and url != ''">
            url = #{url},
        </if>
        <if test="icon != null and icon != ''">
            icon = #{icon}
        </if>
        <if test="num != null and num != ''">
            num = #{num},
        </if>
        <if test="type != null and type != ''">
            `type` = #{type},
        </if>
        <if test="status != null and status != ''">
            status = #{status},
        </if>
        <if test="note != null and note != ''">
            note = #{note},
        </if>
        update_user = #{updateUser}
        where id = #{id}
    </update>

</mapper>