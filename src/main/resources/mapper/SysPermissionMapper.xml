<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.skotori.sunzboot.module.sys.mapper.SysPermissionMapper">

    <select id="selectPermissionListByRoleIds" parameterType="java.lang.Integer" resultType="com.skotori.sunzboot.module.sys.model.SysPermission">
        select *
        from sys_permission
        where id
        in (
        select permission_id
        from sys_role_permission
        where role_id
        in <foreach item="item" index="index" collection="roleIds" open="(" separator="," close=")">
        #{item}
    </foreach>
        )
    </select>

</mapper>