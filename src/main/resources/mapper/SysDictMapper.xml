<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.skotori.sunzboot.module.sys.mapper.SysDictMapper">

    <select id="selectDictList" parameterType="com.skotori.sunzboot.module.sys.model.SysDict" resultType="com.skotori.sunzboot.module.sys.model.SysDict">
        select *
        from sys_dict
        where 1 = 1
        <if test="id != null and id != ''">
            and pid = #{id}
        </if>
        <if test="name != null and name != ''">
            and `name` like concat('%', #{name}, '%')
        </if>
        <if test="code != null and code != ''">
            and code like concat('%', #{code}, '%')
        </if>
        <if test="status != null and status != ''">
            and status = #{status}
        </if>
    </select>

    <select id="selectNodeList" parameterType="com.skotori.sunzboot.module.sys.model.SysDict" resultType="com.skotori.sunzboot.common.tree.treeNode.DictTreeNode">
        select *
        from sys_dict
        where 1 = 1
        <if test="id != null and id != ''">
            and pid = #{id}
        </if>
        <if test="name != null and name != ''">
            and `name` like concat('%', #{name}, '%')
        </if>
        <if test="code != null and code != ''">
            and code like concat('%', #{code}, '%')
        </if>
        <if test="status != null and status != ''">
            and status = #{status}
        </if>
    </select>

    <insert id="insertDict" parameterType="com.skotori.sunzboot.module.sys.model.SysDict">
        insert into sys_dict (
            pid,
            <if test="num != null and num != ''">
                num,
            </if>
            `name`,
            code,
            <if test="status != null and status != ''">
                status,
            </if>
            <if test="note != null and note != ''">
                note,
            </if>
            create_time,
            create_user
        ) values (
            #{pid},
            <if test="num != null and num != ''">
                #{num},
            </if>
            #{name},
            #{code},
            <if test="status != null and status != ''">
                #{status},
            </if>
            <if test="note != null and note != ''">
                #{note},
            </if>
            #{createTime},
            #{createUser}
        )
    </insert>

    <delete id="deleteDictById" parameterType="java.lang.Integer">
        delete from sys_dict
        where id = #{id}
    </delete>

    <update id="updateDict" parameterType="com.skotori.sunzboot.module.sys.model.SysDict">
        update sys_dict set
        <if test="pid != null and pid != ''">
            pid = #{pid},
        </if>
        <if test="num != null and num != ''">
            num = #{num},
        </if>
        <if test="name != null and name != ''">
            `name` = #{name},
        </if>
        <if test="code != null and code != ''">
            code = #{code},
        </if>
        <if test="status != null and status != ''">
            status = #{status},
        </if>
        <if test="note != null and note != ''">
            note = #{note},
        </if>
        update_user = #{updateUser}
        where id = #{id}
    </update>

</mapper>