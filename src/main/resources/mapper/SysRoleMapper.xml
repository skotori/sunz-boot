<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.skotori.sunzboot.module.sys.mapper.SysRoleMapper">

    <select id="selectRolesByUserId" parameterType="java.lang.Integer" resultType="com.skotori.sunzboot.module.sys.model.SysRole">
        select *
        from sys_role as r
        left join sys_user_role as ur on r.id = ur.role_id
        where ur.user_id = #{userId}
    </select>

    <select id="selectRoleList" parameterType="com.skotori.sunzboot.module.sys.model.SysRole" resultType="com.skotori.sunzboot.module.sys.model.SysRole">
        select *
        from sys_role
        where 1 = 1
        <if test="code != null and code != ''">
            and code like concat('%', #{code}, '%')
        </if>
        <if test="name != null and name != ''">
            and `name` like concat('%', #{name}, '%')
        </if>
        <if test="deptId != null and deptId != ''">
            and dept_id = #{deptId}
        </if>
        <if test="status != null and status != ''">
            and status = #{status}
        </if>
    </select>

    <insert id="insertRole" parameterType="com.skotori.sunzboot.module.sys.model.SysRole">
        insert into sys_role (
            code,
            `name`,
            <if test="num != null and num != ''">
                num,
            </if>
            dept_id,
            <if test="status != null and status != ''">
                status,
            </if>
            <if test="note != null and note != ''">
                note,
            </if>
            create_time,
            create_user
        ) values (
            #{code},
            #{name},
            <if test="num != null and num != ''">
                #{num},
            </if>
            #{deptId},
            <if test="status != null and status != ''">
                #{status},
            </if>
            <if test="note != null and note != ''">
                #{note},
            </if>
            create_time,
            create_user
        )
    </insert>

    <delete id="deleteRoleById" parameterType="java.lang.Integer">
        delete from sys_role
        where id = #{id}
    </delete>

    <update id="updateRole" parameterType="com.skotori.sunzboot.module.sys.model.SysRole">
        update sys_role set
        <if test="code != null and code != ''">
            code = #{code},
        </if>
        <if test="name != null and name != ''">
            `name` = #{name},
        </if>
        <if test="num != null and num != ''">
            num = #{num},
        </if>
        <if test="deptId != null and deptId != ''">
            dept_id = #{deptId},
        </if>
        <if test="status != null and status != ''">
            status = #{status},
        </if>
        <if test="note != null and note != ''">
            note = #{note},
        </if>
        update_user = #{updateUser}
        where id = #{id}
    </update>

</mapper>