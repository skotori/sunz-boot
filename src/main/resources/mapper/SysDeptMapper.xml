<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.skotori.sunzboot.module.sys.mapper.SysDeptMapper">

    <select id="selectDeptById" parameterType="java.lang.Integer" resultType="com.skotori.sunzboot.module.sys.model.SysDept">
        select *
        from sys_dept
        where id = #{id}
    </select>

    <select id="selectDeptList" parameterType="com.skotori.sunzboot.module.sys.model.SysDept" resultType="com.skotori.sunzboot.module.sys.model.SysDept">
        select *
        from sys_dept
        where 1 = 1
        <if test="id != null and id != ''">
            and pids like concat('%', #{id}, '%')
        </if>
        <if test="name != null and name != ''">
            and `name` like concat('%', #{name}, '%')
        </if>
        <if test="status != null and status != ''">
            and status = #{status}
        </if>
    </select>

    <select id="selectNodeList" parameterType="com.skotori.sunzboot.module.sys.model.SysDept" resultType="com.skotori.sunzboot.common.tree.treeNode.DeptTreeNode">
        select id,
        pid,
        `name` as label
        from sys_dept
        where 1 = 1
        <if test="id != null and id != ''">
            and pids like concat('%', #{id}, '%')
        </if>
        <if test="name != null and name != ''">
            and `name` like concat('%', #{name}, '%')
        </if>
        <if test="status != null and status != ''">
            and status = #{status}
        </if>
    </select>

    <insert id="insertDept" parameterType="com.skotori.sunzboot.module.sys.model.SysDept">
        insert into sys_dept (
            pid,
            pids,
            `name`,
            <if test="num != null and num != ''">
                num,
            </if>
            <if test="status != null and status != ''">
                status,
            </if>
            <if test="note != null and note != ''">
                note,
            </if>
            create_time,
            create_user
        ) values (
            #{pid},
            #{pids},
            #{name},
            <if test="num != null and num != ''">
                #{num},
            </if>
            <if test="status != null and status != ''">
                #{status},
            </if>
            <if test="note != null and note != ''">
                #{note},
            </if>
            #{createTime},
            #{createUser}
        )
    </insert>

    <delete id="deleteDeptById" parameterType="java.lang.Integer">
        delete from sys_dept
        where id = #{id}
    </delete>

    <update id="updateDept" parameterType="com.skotori.sunzboot.module.sys.model.SysDept">
        update sys_dept set
        <if test="pid != null and pid != ''">
            pid = #{pid},
        </if>
        <if test="pids != null and pids != ''">
            pids = #{pids},
        </if>
        <if test="name != null and name != ''">
            `name` = #{name},
        </if>
        <if test="num != null and num != ''">
            num = #{num},
        </if>
        <if test="status != null and status != ''">
            status = #{status},
        </if>
        <if test="note != null and note != ''">
            note = #{note},
        </if>
        update_user = #{updateUser}
        where id = #{id}
    </update>

</mapper>